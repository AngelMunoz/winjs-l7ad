{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source" : "pages/**",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=300"
        } ]
      },
      {
        "source" : "fragments/**",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=300"
        } ]
      }
    ]
  }
}
